<!-- LMS.Web/Views/Payment/Success.cshtml -->
@{
    ViewData["Title"] = "Success Payment";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card-modern text-center p-5">
                    <div class="mb-4">
                        <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 100px; height: 100px;">
                            <i class="fas fa-check text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    <h2 class="fw-bold text-success mb-3">تم الدفع بنجاح! 🎉</h2>
                    <p class="text-muted mb-4">@ViewBag.Message</p>

                    @if (!string.IsNullOrEmpty(ViewBag.PaymentId))
                    {
                        <div class="bg-light rounded-3 p-3 mb-4">
                            <small class="text-muted d-block">رقم المعاملة</small>
                            <strong class="text-primary">#@ViewBag.PaymentId</strong>
                        </div>
                    }

                    <div class="d-grid gap-3">
                        <a href="@Url.Action("Index", "Dashboard")" class="btn-primary-custom">
                            <i class="fas fa-tachometer-alt me-2"></i>الذهاب للوحة التحكم
                        </a>
                        <div class="row g-2">
                            <div class="col-6">
                                <a href="@Url.Action("Index", "Courses")" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-book me-1"></i>الكورسات
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="@Url.Action("Index", "Payment")" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-receipt me-1"></i>المدفوعات
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
