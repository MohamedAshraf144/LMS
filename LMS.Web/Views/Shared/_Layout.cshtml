                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&auto=format&fit=facearea&facepad=2&w=40&h=40&q=80"
                                     alt="User" class="rounded-circle me-2" style="width: 32px; height: 32px;">
                                @Context.Session.GetString("UserName")
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Dashboard")">
                                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Payment")">
                                        <i class="fas fa-credit-card me-2"></i>Payments
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index", "Profile")">
                                        <i class="fas fa-user me-2"></i>Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link me-2" href="@Url.Action("Login", "Account")">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn-primary-custom" href="@Url.Action("Register", "Account")">
                                <i class="fas fa-user-plus me-1"></i>Sign Up
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="page-content">
        <!-- Alert Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        @if (TempData["Warning"] != null)
        {
            <div class="container mt-3">
                <div class="alert alert-warning alert-dismissible fade show">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        }

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-graduation-cap me-2"></i>Learning Hub
                    </h5>
                    <p class="text-light opacity-75">
                        An advanced educational platform designed to empower individuals to develop their skills and acquire knowledge in various fields.
                    </p>
                </div>
                <div class="col-lg-2">
                    <h6 class="fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="@Url.Action("Index", "Home")" class="text-light opacity-75 text-decoration-none">Home</a></li>
                        <li class="mb-2"><a href="@Url.Action("Index", "Courses")" class="text-light opacity-75 text-decoration-none">Courses</a></li>
                        <li class="mb-2"><a href="@Url.Action("About", "Home")" class="text-light opacity-75 text-decoration-none">About Us</a></li>
                        <li class="mb-2"><a href="@Url.Action("Contact", "Home")" class="text-light opacity-75 text-decoration-none">Contact</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h6 class="fw-bold mb-3">Support</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-light opacity-75 text-decoration-none">Help Center</a></li>
                        <li class="mb-2"><a href="#" class="text-light opacity-75 text-decoration-none">FAQ</a></li>
                        <li class="mb-2"><a href="#" class="text-light opacity-75 text-decoration-none">Privacy Policy</a></li>
                        <li class="mb-2"><a href="#" class="text-light opacity-75 text-decoration-none">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h6 class="fw-bold mb-3">Connect With Us</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light opacity-75 fs-4"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light opacity-75 fs-4"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light opacity-75 fs-4"><i class="fab fa-linkedin"></i></a>
                        <a href="#" class="text-light opacity-75 fs-4"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4 opacity-25">
            <div class="text-center">
                <p class="mb-0 text-light opacity-75">
                    &copy; 2025 Learning Hub. All rights reserved.
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function () {
            const navbar = document.getElementById('mainNavbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Loading button states
        function showLoading(button, text = 'Loading...') {
            const originalText = button.innerHTML;
            button.innerHTML = `<span class="loading-spinner me-2"></span>${text}`;
            button.disabled = true;
            button.dataset.originalText = originalText;
        }

        function hideLoading(button) {
            button.innerHTML = button.dataset.originalText;
            button.disabled = false;
        }

        // Enhanced form submissions
        document.addEventListener('submit', function (e) {
            const submitBtn = e.target.querySelector('button[type="submit"]');
            if (submitBtn && !submitBtn.disabled) {
                showLoading(submitBtn);
            }
        });

        // SweetAlert integration for confirmations
        function confirmAction(message, callback) {
            Swal.fire({
                title: 'Confirm Action',
                text: message,
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Yes, I\'m sure',
                cancelButtonText: 'Cancel',
                confirmButtonColor: '#6366f1',
                cancelButtonColor: '#64748b'
            }).then((result) => {
                if (result.isConfirmed && callback) {
                    callback();
                }
            });
        }

        // Toggle password visibility
        function togglePassword(button) {
            const input = button.parentElement.querySelector('input');
            const icon = button.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Payment success/error handling
        @if (TempData["PaymentSuccess"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Payment Successful!',
                    text: '@TempData["PaymentSuccess"]',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#10b981'
                });
                </text>
        }

        @if (TempData["PaymentError"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Payment Failed',
                    text: '@TempData["PaymentError"]',
                    confirmButtonText: 'OK',
                    confirmButtonColor: '#ef4444'
                });
                </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>