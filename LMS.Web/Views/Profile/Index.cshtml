@model LMS.Web.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user me-2"></i>My Profile</h4>
                </div>
                <div class="card-body">
                    <h5 class="fw-bold mb-3">User Information</h5>
                    <dl class="row mb-4">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.DisplayName</dd>
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                    </dl>
                    <h5 class="fw-bold mb-3">My Courses</h5>
                    @if (Model.Courses != null && Model.Courses.Count > 0)
                    {
                        <ul class="list-group">
                            @foreach (var course in Model.Courses)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="fas fa-book-open text-primary me-2"></i>
                                        <strong>@course.Title</strong>
                                    </span>
                                    <a href="@Url.Action("Details", "Courses", new { id = course.Id })" class="btn btn-outline-primary btn-sm">
                                        View Course
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-info mt-3">
                            You are not enrolled in any courses yet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 