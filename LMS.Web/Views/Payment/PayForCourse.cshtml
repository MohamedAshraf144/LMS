@model object
@{
    ViewData["Title"] = "Test Payment";
    var course = ViewBag.Course as LMS.Core.Models.Course;
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="payment-card">
                    <div class="payment-header">
                        <i class="fas fa-credit-card fa-3x mb-3"></i>
                        <h2 class="fw-bold mb-2">Course Payment</h2>
                        <p class="mb-0 opacity-75">Complete payment to get full access to the course</p>
                    </div>
                    <div class="payment-body">
                        @if (course != null)
                        {
                            <!-- Course Info -->
                            <div class="payment-summary">
                                <h5 class="fw-bold mb-3">
                                    <i class="fas fa-shopping-cart me-2"></i>Order Summary
                                </h5>
                                <div class="row align-items-center">
                                    <div class="col-md-3">
                                        @if (!string.IsNullOrEmpty(course.ImageUrl))
                                        {
                                            <img src="@course.ImageUrl" alt="@course.Title" class="img-fluid rounded-3">
                                        }
                                        else
                                        {
                                            <div class="bg-primary rounded-3 d-flex align-items-center justify-content-center" style="height: 100px;">
                                                <i class="fas fa-book fa-2x text-white"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-9">
                                        <h5 class="fw-bold mb-2">@course.Title</h5>
                                        <p class="text-muted mb-3">@course.Description</p>
                                        <div class="row g-3">
                                            <div class="col-sm-4">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-clock text-primary me-2"></i>
                                                    <span class="small">@course.Duration hours</span>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-signal text-primary me-2"></i>
                                                    <span class="small">@course.Level.ToString()</span>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-tags text-primary me-2"></i>
                                                    <span class="small">@(course.Category?.Name ?? "General")</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Pricing -->
                                <hr class="my-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="fw-semibold">Course Price:</span>
                                    <span class="h4 fw-bold text-success mb-0">$@course.Price?.ToString("F0")</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="fw-semibold">Tax:</span>
                                    <span class="text-muted">Included</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 fw-bold">Total:</span>
                                    <span class="h3 fw-bold text-primary">$@course.Price?.ToString("F0")</span>
                                </div>
                            </div>

                            <!-- Payment Methods -->
                            <div class="mb-4">
                                <h5 class="fw-bold mb-3">
                                    <i class="fas fa-payment-card me-2"></i>Payment Method
                                </h5>
                                <div class="bg-light rounded-3 p-3">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-credit-card text-primary fs-4 me-3"></i>
                                            <div>
                                                <h6 class="mb-0 fw-bold">PayMob - Secure Payment</h6>
                                                <small class="text-muted">Visa, Mastercard, Mobile Wallets</small>
                                            </div>
                                        </div>
                                        <i class="fas fa-shield-alt text-success fs-4"></i>
                                    </div>
                                </div>
                            </div>

                            <!-- Test Mode Alert -->
                            <div class="alert alert-warning border-0">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-exclamation-triangle me-3"></i>
                                    <div>
                                        <strong>Test Mode:</strong>
                                        <ul class="mb-0 mt-2">
                                            <li>Click "Test Payment" to simulate a successful payment</li>
                                            <li>Click "Live Payment" to use actual PayMob integration</li>
                                            <li>Check browser console for detailed logs</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Payment Buttons -->
                            <div class="d-grid gap-3">
                                <!-- Test Payment Button -->
                                <a href="@Url.Action("TestPayment", "Payment", new { courseId = course.Id })" 
                                   class="btn btn-warning btn-lg">
                                    <i class="fas fa-flask me-2"></i>
                                    Test Payment - $@course.Price?.ToString("F0")
                                </a>

                                <!-- Live Payment Button -->
                                <a href="@Url.Action("EnterTestCard", "Payment", new { courseId = course.Id })" class="btn-primary-custom btn-lg w-100">
                                    <i class="fas fa-credit-card me-2"></i>
                                    Live Payment - $@course.Price?.ToString("F0")
                                </a>

                                <a href="@Url.Action("Details", "Courses", new { id = course.Id })" 
                                   class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Course
                                </a>
                            </div>

                            <!-- Debug Information -->
                            <div class="mt-4">
                                <details class="bg-light rounded-3 p-3">
                                    <summary class="fw-bold mb-2">Debug Information</summary>
                                    <div class="small">
                                        <p><strong>Course ID:</strong> @course.Id</p>
                                        <p><strong>Price:</strong> @course.Price</p>
                                        <p><strong>User Session:</strong> @Context.Session.GetString("UserId")</p>
                                        <p><strong>User Name:</strong> @Context.Session.GetString("UserName")</p>
                                        <p><strong>Current URL:</strong> @Context.Request.Path@Context.Request.QueryString</p>
                                    </div>
                                </details>
                            </div>

                            <!-- Security Badges -->
                            <div class="security-badges mt-4">
                                <div class="security-badge">
                                    <i class="fas fa-shield-alt text-success me-2"></i>100% Secure
                                </div>
                                <div class="security-badge">
                                    <i class="fas fa-lock text-primary me-2"></i>SSL Encrypted
                                </div>
                                <div class="security-badge">
                                    <i class="fas fa-undo text-warning me-2"></i>Money-back Guarantee
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Error loading course data. Please try again.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enhanced error logging
        window.addEventListener('error', function(e) {
            console.error('JavaScript Error:', e.error);
        });

        // Form submission logging
        document.querySelector('form')?.addEventListener('submit', function(e) {
            console.log('Form submitted:', this.action);
            const submitBtn = this.querySelector('button[type="submit"]');
            if (submitBtn) {
                console.log('Button clicked:', submitBtn.textContent);
                showLoading(submitBtn, 'Processing payment...');
            }
        });

        function showLoading(button, text = 'Loading...') {
            const originalText = button.innerHTML;
            button.innerHTML = `<span class="spinner-border spinner-border-sm me-2"></span>${text}`;
            button.disabled = true;
            button.dataset.originalText = originalText;
        }

        // Log session information for debugging
        console.log('Debug Info:', {
            courseId: '@course?.Id',
            coursePrice: '@course?.Price',
            userSession: '@Context.Session.GetString("UserId")',
            userName: '@Context.Session.GetString("UserName")'
        });
    </script>
}